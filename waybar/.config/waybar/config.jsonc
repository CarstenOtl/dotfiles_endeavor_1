    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "Ôâ®",
            "3": "ÔÑ°",
            "4": "ÔÜº",
            "5": "ÔÅµ",
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        }
    },

    "cava": {
        "cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
        "framerate": 30,
        "autosens": 1,
        "sensitivity": 100,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
        "actions": {
                   "on-click-right": "mode"
                   }
    },

    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "interval": 10,
        "consume-icons": {
            "on": "ÔÉÑ " // Icon shows only when "consume" is on
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ", // Icon grayed out when "random" is off
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
},

    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },

   "custom/weather" : {
        //shows the current weather and forecast
        "tooltip" : true,
        "format" : "{}¬∞",
        "interval" : 3600,
        "exec" : "wttrbar",
        "return-type" : "json"
    },

    "tray": {
        "icon-size": 10,
        "spacing": 2
    },

    // "clock": {
    //     "format-alt": "{:%Y-%m-%d}",
    //     // "format": "{:ÔÄó %I:%M %p  ÔÅ≥ %a, %b %e}",
    //     "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    // }, 
    "clock": {
        "interval": 60,
        "format": "ÔÄó  {:%a, %b %d [%H:%M]}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
          "mode": "year",
          "mode-mon-col": 3,
          "format": {
            "months": "<span color='#e6e1cf'><b>{}</b></span>",
            "days": "<span color='#cad3f5'><b>{}</b></span>",
            "weekdays": "<span color='#ff3333'><b>{}</b></span>",
            "today": "<span color='#f5a97f'><b><u>{}</u></b></span>"
          },
        },
      },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },

    "cpu": {
        "format": "Ôãõ  {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "ÔÉâ  {}%",
        "on-click": "btop"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
