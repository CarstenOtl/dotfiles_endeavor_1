{
    "layer": "top",
    // "output": "eDP-2",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 20,
    "spacing": 4,
    "modules-left": [
        "hyprland/workspaces",
        "mpd",
        "cava"
    ],
    "modules-center": [
        // "hyprland/window",
        "custom/weather",
        "clock",
    ],
    "modules-right": [
        "power-profiles-deamon",
        "pulseaudio",
        "pulseaudio#microphone",
        "cpu",
        "memory",
        "temperature",
        "network",
        "bluetooth",
        "backlight",
        "battery"
        // "tray"
    ],
    // "hyprland/window": {
    //     "format": "{}",
